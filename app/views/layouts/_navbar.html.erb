<header class="mb-4">
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Suikei</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navmenu" aria-controls="navmenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse text-right justify-content-end" id="navmenu">
            <ul class="navbar-nav">
                <% if logged_in? %>
                    <li class="nav-item"></i><%= link_to current_user.name, user_path(current_user), class: 'nav-link' %></li>
                    <li class="nav-item"><%= link_to 'Logout', logout_path, method: :delete, data:{ confirm:'ロウグアウトしてよろしいですか？' }, class: 'nav-link' %></li>
                <% else %>
                    <li class="nav-item"><%= link_to 'Signup', signup_path, class: 'nav-link' %></li>
                    <li class="nav-item"><%= link_to 'Login', login_path, class: 'nav-link' %></li>
                <% end %>
            </ul>
        </div>
    </nav>
</header>