<header class="mb-4">
    <nav class="navbar navbar-dark bg-dark">
        <div id="nav-left">
            <a class="navbar-brand" href="/">Suikei</a>
        </div>
        
        <div class="justify-content-end" id="nav-right">
            <ul class="navbar-nav">
                <% if logged_in? %>
                    <li class="nav-item"><%= link_to current_user.name, user_path(current_user), class: 'nav-link' %></li>
                    <li class="nav-item"><%= link_to 'Logout', logout_path, method: :delete, data:{ confirm:'ロウグアウトしてよろしいですか？' }, class: 'nav-link' %></li>
                <% else %>
                    <li class="nav-item"><%= link_to 'Signup', signup_path, class: 'nav-link' %></li>
                    <li class="nav-item"><%= link_to 'Login', login_path, class: 'nav-link' %></li>
                <% end %>
            </ul>
        </div>
    </nav>
</header>